# 阶段 1：构建环境
FROM acgetchell/vcpkg-image:latest AS build

# 设置非交互模式
ENV DEBIAN_FRONTEND=noninteractive

# 克隆并构建 securefs
RUN git clone https://github.com/grissomsh/securefs.git /securefs && \
    cd /securefs && \
    python3 build.py --setup_vcpkg && \
    python3 build.py --enable_unit_test

# 复制主程序代码
COPY main.cpp /app/main.cpp
WORKDIR /app

# 编译主程序，链接 securefs
RUN g++ -o main main.cpp -L/securefs/build -lsecurefs

# 阶段 2：运行环境
FROM ubuntu:20.04

# 设置非交互模式
ENV DEBIAN_FRONTEND=noninteractive

# 设置国内镜像源并安装必要依赖
RUN cp /etc/apt/sources.list /etc/apt/sources.list.bak && \
    sed -i 's|http://archive.ubuntu.com/ubuntu/|http://mirrors.aliyun.com/ubuntu/|g' /etc/apt/sources.list && \
    sed -i 's|http://security.ubuntu.com/ubuntu/|http://mirrors.aliyun.com/ubuntu/|g' /etc/apt/sources.list && \
    apt update && \
    apt install -y --no-install-recommends \
    fuse \
    ca-certificates && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# 从构建阶段复制编译好的程序和依赖
COPY --from=build /app/main /app/main
COPY --from=build /securefs/build/securefs /usr/local/bin/securefs

# 设置运行时权限
RUN chmod +x /app/main && chmod +x /usr/local/bin/securefs

# 设置工作目录
WORKDIR /app

# 设置入口点
ENTRYPOINT ["/app/main"]